<div class="container mx-auto px-2 sm:px-4 xl:px-0">
    {% if section.settings.link %}
        <a href="{{ section.settings.link }}">
    {% endif %}
    <img
        src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
        data-sizes="auto"
        width="1280"
        data-src="{{ section.settings.image | img_url: '768x' }}"
        data-srcset="{{ section.settings.image | img_url: '320x' }} 320w,
                        {{ section.settings.image | img_url: '640x' }} 640w,
                        {{ section.settings.image | img_url: '768x' }} 768w,
                        {{ section.settings.image | img_url: '1024x' }} 1024w,
                        {{ section.settings.image | img_url: '1280x' }} 1280w"
        alt="{{section.settings.image.alt}}"
        class="lazyload"
    />
    {% if section.settings.link %}
        </a>
    {% endif %}
</div>

{% schema %}
    {
        "name": "Image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "link",
                "label": "Link"
            }
        ],
        "presets": [
            {
                "name": "Image",
                "category": "Image",
                "settings": {}
            }
        ]
    }
{% endschema %}